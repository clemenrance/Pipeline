pipeline{

    agent any

    stages{

        stage('Continouse Download'){

            steps{

                git branch: 'main', url: 'https://github.com/clemenrance/Pipeline.git'
            }
        }
        stage('Unit Test'){

            steps{

                sh 'mvn test'
            }
        }
        stage('Integration Test'){

            steps{

                sh 'mvn verify -DskipUnitTests'
            }
        }
        stage('Maven Build'){   

            steps{

                sh 'mvn clean install'
            }
        }
        stage('Static Code Analysis'){

            steps{

                script{

                    withSonarQubeEnv(credentialsId: 'sonar-link'){
                        sh 'mvn clean package sonar:sonar'
                    }
                }
            }
        }
        stage('Quality Gate Analysis'){

            steps{

                script{

                    waitForQualityGate abortPipeline: false, credentialsId: 'sonar-link'
                }
            }
        }
        stage('Upload Artifact to Nexus'){

            steps{

                script{

                    nexusArtifactUploader artifacts: [[artifactId: 'springboot', classifier: '', file: 'target/Uber.jar', type: 'jar']], credentialsId: 'nexus-link', groupId: 'com.example', nexusUrl: '3.92.226.181:8081', nexusVersion: 'nexus3', protocol: 'http', repository: 'demmoapp-release', version: '1.0.4'
                }
            }
        }
        stage('Docker Image Build'){

            steps{

                script{

                    sh 'docker build -t myuber .'
                }
            }
        }
        stage('Uploading image to Docker hub'){

            steps{

                script{
                    withCredentials([string(credentialsId: 'docker-cred', variable: 'docker-cred')]){
                        sh 'docker login -u clemenrance -p ${docker-cred}'
                        sh 'docker tag myuber:latest clemenrance/pipeline-images:demoappimage'
                        sh 'docker push clemenrance/pipeline-images:myuber'
                    }
                }
            }
        }
    }
}